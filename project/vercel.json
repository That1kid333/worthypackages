{
  "rewrites": [
    {
      "source": "/((?!api|static|.*\\..*|_next|favicon.*).*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/favicon.svg",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/favicon.svg"
    }
  ]
}
